<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_columnWeight="1"
    android:orientation="vertical"
    android:id="@+id/arrangement_rv_item_layout">

    <ImageView
        android:id="@+id/arrangement_rv_item_image"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/pic_plants"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/arrangement_rv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/arrangement_rv_item_image"
        android:layout_below="@id/arrangement_rv_item_image"
        android:layout_marginTop="10dp"
        android:text="Plants"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/arrangement_rv_item_name"
        android:layout_below="@id/arrangement_rv_item_name"
        android:text="60"
        android:id="@+id/arrangement_rv_item_sum"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>