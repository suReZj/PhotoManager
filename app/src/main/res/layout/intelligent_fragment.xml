<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:stv="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/intelligent_fragment_search"
        android:gravity="center"
        android:src="@mipmap/search"
        android:layout_centerHorizontal="true"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/intelligent_fragment_search"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:columnCount="3"
                android:rowCount="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/intelligent_fragment_album_image"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:src="@mipmap/pic_gallery"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gallery"
                        android:layout_below="@id/intelligent_fragment_album_image"
                        android:textStyle="bold"
                        android:id="@+id/intelligent_fragment_album_name"
                        android:layout_alignLeft="@id/intelligent_fragment_album_image"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/intelligent_fragment_album_name"
                        android:text="2580"
                        android:layout_alignLeft="@id/intelligent_fragment_album_name"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/intelligent_fragment_gif_image"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:src="@mipmap/pic_gif"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GIF"
                        android:layout_below="@id/intelligent_fragment_gif_image"
                        android:textStyle="bold"
                        android:id="@+id/intelligent_fragment_gif_name"
                        android:layout_alignLeft="@id/intelligent_fragment_gif_image"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/intelligent_fragment_gif_name"
                        android:text="60"
                        android:layout_alignLeft="@id/intelligent_fragment_gif_name"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/intelligent_fragment_video_image"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:src="@mipmap/pic_videos"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Videos"
                        android:layout_below="@id/intelligent_fragment_video_image"
                        android:textStyle="bold"
                        android:id="@+id/intelligent_fragment_video_name"
                        android:layout_alignLeft="@id/intelligent_fragment_video_image"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/intelligent_fragment_video_name"
                        android:text="60"
                        android:layout_alignLeft="@id/intelligent_fragment_video_name"
                        />
                </RelativeLayout>

            </GridLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="Types"
                android:textSize="18sp"
                android:textStyle="bold" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:columnCount="2"
                android:rowCount="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/intelligent_fragment_plants_image"
                        android:layout_width="170dp"
                        android:layout_height="110dp"
                        android:src="@mipmap/pic_plants"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plants"
                        android:layout_below="@id/intelligent_fragment_plants_image"
                        android:textStyle="bold"
                        android:id="@+id/intelligent_fragment_plants_name"
                        android:layout_alignLeft="@id/intelligent_fragment_plants_image"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/intelligent_fragment_plants_name"
                        android:text="60"
                        android:layout_alignLeft="@id/intelligent_fragment_plants_name"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/intelligent_fragment_animal_image"
                        android:layout_width="170dp"
                        android:layout_height="110dp"
                        android:src="@mipmap/pic_animals"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Animals"
                        android:layout_below="@id/intelligent_fragment_animal_image"
                        android:textStyle="bold"
                        android:id="@+id/intelligent_fragment_animal_name"
                        android:layout_alignLeft="@id/intelligent_fragment_animal_image"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/intelligent_fragment_animal_name"
                        android:text="60"
                        android:layout_alignLeft="@id/intelligent_fragment_animal_name"
                        />
                </RelativeLayout>
            </GridLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="Location"
                android:textSize="18sp"
                android:textStyle="bold" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:columnCount="2"
                android:rowCount="2">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/intelligent_fragment_gz_image"
                        android:layout_width="170dp"
                        android:layout_height="110dp"
                        android:src="@mipmap/pic_trips"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guangzhou"
                        android:layout_below="@id/intelligent_fragment_gz_image"
                        android:textStyle="bold"
                        android:id="@+id/intelligent_fragment_gz_name"
                        android:layout_alignLeft="@id/intelligent_fragment_gz_image"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/intelligent_fragment_gz_name"
                        android:text="60"
                        android:layout_alignLeft="@id/intelligent_fragment_gz_name"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/intelligent_fragment_bj_image"
                        android:layout_width="170dp"
                        android:layout_height="110dp"
                        android:src="@mipmap/pic_life"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beijing"
                        android:layout_below="@id/intelligent_fragment_bj_image"
                        android:textStyle="bold"
                        android:id="@+id/intelligent_fragment_bj_name"
                        android:layout_alignLeft="@id/intelligent_fragment_bj_image"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/intelligent_fragment_bj_name"
                        android:text="60"
                        android:layout_alignLeft="@id/intelligent_fragment_bj_name"
                        />
                </RelativeLayout>
            </GridLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>