<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:columnCount="2"
        android:rowCount="1"
        android:id="@+id/my_file_fragment_gridlayout">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/my_file_fragment_plants_image"
                android:layout_width="170dp"
                android:layout_height="110dp"
                android:src="@mipmap/pic_plants"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plants"
                android:layout_below="@id/my_file_fragment_plants_image"
                android:textStyle="bold"
                android:id="@+id/my_file_fragment_plants_name"
                android:layout_alignLeft="@id/my_file_fragment_plants_image"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_file_fragment_plants_name"
                android:text="60"
                android:layout_alignLeft="@id/my_file_fragment_plants_name"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/my_file_fragment_animal_image"
                android:layout_width="170dp"
                android:layout_height="110dp"
                android:src="@mipmap/pic_animals"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Animals"
                android:layout_below="@id/my_file_fragment_animal_image"
                android:textStyle="bold"
                android:id="@+id/my_file_fragment_animal_name"
                android:layout_alignLeft="@id/my_file_fragment_animal_image"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_file_fragment_animal_name"
                android:text="60"
                android:layout_alignLeft="@id/my_file_fragment_animal_name"
                />
        </RelativeLayout>
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_below="@id/my_file_fragment_gridlayout">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/my_file_fragment_gz_image"
                android:layout_width="170dp"
                android:layout_height="110dp"
                android:src="@mipmap/pic_trips"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trips"
                android:layout_below="@id/my_file_fragment_gz_image"
                android:textStyle="bold"
                android:id="@+id/my_file_fragment_gz_name"
                android:layout_alignLeft="@id/my_file_fragment_gz_image"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_file_fragment_gz_name"
                android:text="60"
                android:layout_alignLeft="@id/my_file_fragment_gz_name"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/my_file_fragment_bj_image"
                android:layout_width="170dp"
                android:layout_height="110dp"
                android:src="@mipmap/pic_life"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Life"
                android:layout_below="@id/my_file_fragment_bj_image"
                android:textStyle="bold"
                android:id="@+id/my_file_fragment_bj_name"
                android:layout_alignLeft="@id/my_file_fragment_bj_image"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_file_fragment_bj_name"
                android:text="60"
                android:layout_alignLeft="@id/my_file_fragment_bj_name"
                />
        </RelativeLayout>
    </GridLayout>
</RelativeLayout>