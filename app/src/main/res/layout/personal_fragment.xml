<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/personal_fragment_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/personal_fragment_clickTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/personal_fragment_icon"
        android:text="@string/userName"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/personal_fragment_clickTv"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/personal_fragment_icon"
        android:text="@string/spaceUsed"
        android:textStyle="bold"
        android:id="@+id/personal_fragment_xxxM"/>

    <ProgressBar
        android:id="@+id/personal_fragment_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/personal_fragment_icon"
        android:layout_below="@id/personal_fragment_xxxM"
        android:layout_marginTop="10dp"
        android:progress="30"
        />
    <Button
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="@string/expand"
        android:background="@color/tab_checked"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/personal_fragment_progressBar"
        android:layout_marginHorizontal="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/personal_fragment_progressBar"
        android:layout_marginTop="10dp"
        android:id="@+id/personal_fragment_ll">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="私密相册"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="手机瘦身"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/personal_fragment_ll"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/personal_fragment_settingLayout">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/personal_fragment_settingLayout"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phoneClean"
            android:layout_gravity="center"
            />

    </LinearLayout>
</RelativeLayout>